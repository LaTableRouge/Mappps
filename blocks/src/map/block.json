{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mps/map",
  "title": "Map",
  "category": "maaaps",
  "description": "Contains the map.",
  "textdomain": "maaaps",
  "parent": [
    "mps/maaaps-blocks"
  ],
  "usesContext": [
    "mps/postIDs",
    "mps/postType"
  ],
  "supports": {
    "reusable": false,
    "html": false,
    "layout": false,
    "interactivity": {
      "clientNavigation": true
    }
  },
  "attributes": {
    "selectedMarkerSize": {
      "type": "number",
      "default": 40
    },
    "selectedMarkerClusterSize": {
      "type": "number",
      "default": 50
    },
    "selectedMaxZoom": {
      "type": "number",
      "default": 13
    },
    "isClustered": {
      "type": "boolean",
      "default": true
    },
    "isGeolocated": {
      "type": "boolean",
      "default": true
    },
    "mapTiles": {
      "type": "array",
      "default": [
        {
          "label": "CartoDB Voyager",
          "value": "https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
        },
        {
          "label": "CartoDB Positron",
          "value": "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png"
        },
        {
          "label": "OSM Mapnik",
          "value": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}{r}.png"
        },
        {
          "label": "Open Topo Map",
          "value": "https://{s}.tile.opentopomap.org/{z}/{x}/{y}{r}.png"
        }
      ]
    },
    "selectedMapTiles": {
      "type": "string",
      "default": "https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
    },
    "selectedMarkerColor": {
      "type": "string",
      "default": "#2b82cb"
    },
    "selectedClusterColor": {
      "type": "string",
      "default": "#FCA311"
    },
    "selectedSearchColor": {
      "type": "string",
      "default": "#6ee9a2"
    },
    "selectedGeolocationColor": {
      "type": "string",
      "default": "#2c4965"
    }
  },
  "viewScript": "file:./assets/view.js",
  "editorScript": "file:./assets/index.jsx",
  "editorStyle": "file:./assets/index.css",
  "style": "file:./assets/style-index.css"
}
