{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mppps/map",
  "title": "Map",
  "category": "mappps",
  "description": "Contains the map.",
  "textdomain": "mappps",
  "parent": [
    "mppps/mappps-blocks"
  ],
  "ancestor": [
    "mppps/mappps-block"
  ],
  "usesContext": [
    "mppps/blockId"
  ],
  "supports": {
    "reusable": false,
    "html": false,
    "layout": false,
    "lock": false,
    "interactivity": {
      "clientNavigation": true
    }
  },
  "attributes": {
    "selectedMarkerSize": {
      "type": "string",
      "default": "40px"
    },
    "selectedMarkerClusterSize": {
      "type": "string",
      "default": "50px"
    },
    "selectedMaxZoom": {
      "type": "number",
      "default": 13
    },
    "selectedMaxMarkerZoom": {
      "type": "number",
      "default": 13
    },
    "isClustered": {
      "type": "boolean",
      "default": true
    },
    "isGeolocated": {
      "type": "boolean",
      "default": true
    },
    "haveShadow": {
      "type": "boolean",
      "default": true
    },
    "canZoomToMarker": {
      "type": "boolean",
      "default": true
    },
    "mapTiles": {
      "type": "array",
      "default": [
        {
          "label": "OSM",
          "value": "https://tile.openstreetmap.org/{z}/{x}/{y}.png",
          "maxZoom": 18
        },
        {
          "label": "World Imagery",
          "value": "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
          "maxZoom": 18
        },
        {
          "label": "CartoDB Voyager",
          "value": "https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png",
          "maxZoom": 18
        },
        {
          "label": "CartoDB Positron",
          "value": "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
          "maxZoom": 18
        },
        {
          "label": "OSM Mapnik",
          "value": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}{r}.png",
          "maxZoom": 18
        },
        {
          "label": "Open Topo Map",
          "value": "https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png",
          "maxZoom": 17
        }
      ]
    },
    "selectedMapTiles": {
      "type": "string",
      "default": "https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
    },
    "selectedMarkerColor": {
      "type": "string",
      "default": "#2b82cb"
    },
    "selectedClusterColor": {
      "type": "string",
      "default": "#FCA311"
    },
    "selectedSearchColor": {
      "type": "string",
      "default": "#6ee9a2"
    },
    "selectedGeolocationColor": {
      "type": "string",
      "default": "#2c4965"
    },
    "selectedBoundsPadding": {
      "type": "number",
      "default": 70
    },
    "selectedActiveMarkerColor": {
      "type": "string",
      "default": "#AE2012"
    },
    "haveCustomMarkers": {
      "type": "boolean",
      "default": false
    },
    "selectedMarkerIcon": {
      "type": "object",
      "default": {}
    },
    "selectedMarkerClusterIcon": {
      "type": "object",
      "default": {}
    },
    "selectedMarkerGeolocationIcon": {
      "type": "object",
      "default": {}
    },
    "selectedMarkerSearchIcon": {
      "type": "object",
      "default": {}
    }
  },
  "viewScript": "file:./assets/view.js",
  "editorScript": "file:./assets/index.jsx",
  "editorStyle": "file:./assets/index.css",
  "style": "file:./assets/style-index.css"
}
